# ─── WINDI Dispatcher Configuration ──────────────────────────
# Copy to .env and fill in your values

# SMTP (Strato)
SMTP_HOST=smtp.strato.de
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=governance@windi.ai
SMTP_PASS=your-smtp-password-here

# Sender
MAIL_FROM="WINDI Sovereign System" <governance@windi.ai>

# Recipients whitelist (comma-separated — MANDATORY)
WINDI_RECIPIENTS=jober@windi.ai

# Language (de or en)
WINDI_LANG=de

# API endpoints (defaults work for local Strato)
WINDI_BRIEFING_URL=http://127.0.0.1:8090/api/briefing
WINDI_PDF_URL=http://127.0.0.1:8090/api/report/pdf
WINDI_LEDGER_URL=http://127.0.0.1:8080/api/ledger

# War Room URL (for email CTA button)
WAR_ROOM_URL=https://master.winia4desk.tech/warroom

# Dispatcher port (if running standalone)
DISPATCHER_PORT=8091
