{
  "schema_version": "1.0.0",
  "isp_id": "WINDI-ISP-DB-001",
  "organization": "Deutsche Bahn AG",
  "design_system": {
    "name": "DB Design System",
    "version": "2026.1",
    "based_on": "DB Corporate Design Guidelines"
  },
  "colors": {
    "primary": {
      "red": "#EC0016",
      "red_dark": "#C50014",
      "red_light": "#F75056"
    },
    "neutral": {
      "black": "#1E1E1E",
      "gray_900": "#282828",
      "gray_700": "#3C3C3C",
      "gray_500": "#646464",
      "gray_400": "#878787",
      "gray_300": "#AFAFAF",
      "gray_200": "#CCCCCC",
      "gray_100": "#E5E5E5",
      "gray_50": "#F0F0F0",
      "white": "#FFFFFF"
    },
    "semantic": {
      "success": "#008A29",
      "warning": "#F39200",
      "error": "#EC0016",
      "info": "#0087B9"
    },
    "background": {
      "page": "#FFFFFF",
      "section": "#F8F8F8",
      "highlight": "#FEF0F1",
      "windi_block": "#F0F0F0"
    }
  },
  "typography": {
    "font_family": {
      "primary": "Arial, Helvetica, sans-serif",
      "monospace": "Consolas, Monaco, monospace"
    },
    "font_size": {
      "xs": "7pt",
      "sm": "8pt",
      "base": "9pt",
      "md": "10pt",
      "lg": "11pt",
      "xl": "12pt",
      "2xl": "14pt",
      "3xl": "16pt",
      "4xl": "18pt"
    },
    "font_weight": {
      "normal": 400,
      "medium": 500,
      "bold": 700
    },
    "line_height": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.7
    }
  },
  "spacing": {
    "unit": "mm",
    "page": {
      "a4_width": "210mm",
      "a4_height": "297mm",
      "margin_top": "25mm",
      "margin_right": "20mm",
      "margin_bottom": "20mm",
      "margin_left": "25mm"
    },
    "content": {
      "xs": "2mm",
      "sm": "4mm",
      "md": "6mm",
      "lg": "10mm",
      "xl": "15mm",
      "2xl": "20mm"
    }
  },
  "borders": {
    "width": {
      "thin": "0.5pt",
      "normal": "1pt",
      "medium": "2pt",
      "thick": "3pt"
    },
    "style": {
      "solid": "solid",
      "dashed": "dashed"
    },
    "radius": {
      "none": "0",
      "sm": "2px",
      "md": "4px",
      "lg": "6px"
    }
  },
  "components": {
    "header": {
      "height": "22mm",
      "border_bottom": "3pt solid #EC0016",
      "logo_width": "50mm",
      "logo_height": "12mm"
    },
    "footer": {
      "height": "15mm",
      "border_top": "2pt solid #EC0016",
      "font_size": "8pt"
    },
    "form_field": {
      "label_width": "45mm",
      "input_height": "7mm",
      "input_border": "1pt solid #CCCCCC",
      "input_padding": "2mm 3mm"
    },
    "table": {
      "header_bg": "#EC0016",
      "header_color": "#FFFFFF",
      "row_alt_bg": "#F8F8F8",
      "cell_padding": "2mm 3mm",
      "border": "1pt solid #CCCCCC"
    },
    "checkbox": {
      "size": "4mm",
      "border": "1pt solid #646464",
      "checked_bg": "#EC0016"
    },
    "windi_receipt": {
      "background": "#F0F0F0",
      "border": "1pt solid #CCCCCC",
      "border_radius": "4px",
      "padding": "3mm"
    }
  },
  "document_types": {
    "letter": {
      "template": "templates/letter.html",
      "margins": "standard"
    },
    "form": {
      "template": "templates/form.html",
      "margins": "compact"
    },
    "memo": {
      "template": "templates/memo.html",
      "margins": "standard"
    },
    "report": {
      "template": "templates/report.html",
      "margins": "standard"
    }
  }
}
